<launch>
	<arg name="x_pos" default="-3.0"/>
	<arg name="y_pos" default="1.0"/>
	<arg name="z_pos" default="0.0"/>

	<arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
	<arg name="teleop_output" default="" doc="change with 'gnome-terminal --command' or 'gnome-terminal --tab'" />
	<arg name="gazebo_gui" default="false" /> <!-- ACTIVATE GAZEBO GUI -->
	<arg name="world" default="$(find learning_navigation)/worlds/turtlebot3_house.world" />
	<arg name="map" value=""/>

	<!--gazebo-->
	<include file="$(find learning_navigation)/launch/main_gazebo.launch">
		<arg name="world_name" value="$(arg world)"/>
		<arg name="paused" value="false"/>
		<arg name="use_sim_time" value="true"/>
		<arg name="gui" value="$(arg gazebo_gui)"/>
		<arg name="headless" value="false"/>
		<arg name="debug" value="false"/>
	</include>

	<!--tbot bringup-->
	<include file="$(find learning_navigation)/launch/includes/turtlebot3_remote.launch">
		<arg name="model" value="$(arg model)"/>
	</include>

	<!--spawner-->
	<node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model turtlebot3 -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />

	<!-- teleop -->
	<node pkg="turtlebot3_teleop" type="turtlebot3_teleop_key" name="turtlebot3_teleop_keyboard"  output="screen" launch-prefix="$(arg teleop_output)" />

	<group if="$(eval map != '')">
		<!-- AMCL + map-->
		<include file="$(find learning_navigation)/launch/amcl_with_map.launch">
			<arg name="map_dir" value="$(arg map)" />
		</include>
	</group>

	<group if="$(eval map == '')">
		<!--gmapping + map_saver-->
		<!--<node pkg="learning_navigation" type="gmapping_and_mapsaver.py" name="gmapping_and_mapsaver" />-->
		<include file="$(find learning_navigation)/launch/gmapping.launch" />
	</group>

	<!-- RVIZ -->
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find learning_navigation)/rviz/complete_config.rviz"/>
</launch>
