<launch>
	<arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
	<arg name="x_pos" default="-3.0"/>
	<arg name="y_pos" default="1.0"/>
	<arg name="z_pos" default="0.0"/>

	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/turtlebot3_house.world"/>
		<arg name="paused" value="false"/>
		<arg name="use_sim_time" value="true"/>
		<arg name="gui" value="true"/>
		<arg name="headless" value="false"/>
		<arg name="debug" value="false"/>
	</include>

	<param name="robot_description" command="$(find xacro)/xacro $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

	<node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model turtlebot3 -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />

	<!-- teleop -->
	<node pkg="turtlebot3_teleop" type="turtlebot3_teleop_key" name="turtlebot3_teleop_keyboard"  output="screen" />

	<!-- RVIZ -->
	<include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
		<arg name="model" value="$(arg model)"/>
	</include>
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find turtlebot3_gazebo)/rviz/complete_config.rviz"/>  <!-- default: turtlebot3_gazebo_model.rviz -->

	<!-- check if map is stored -->
	<node pkg="my_fun" type="load_map_or_gmapp.py" name="load_map_or_gmapp" />

	<node pkg="move_base" type="move_base" name="move_base" >
		<rosparam file="$(find turtlebot3_navigation)/param/costmap_common_params_$(arg model).yaml" command="load" />
		<rosparam file="$(find turtlebot3_navigation)/param/local_costmap_params.yaml" command="load" />
		<rosparam file="$(find turtlebot3_navigation)/param/global_costmap_params.yaml" command="load" />

		<!-- <param name="planner_patience" value="2.0" />

		<param name="global_costmap/origin_x" value="-10" />
		<param name="global_costmap/origin_y" value="-10" />
		<param name="global_costmap/height" value="19" />
		<param name="global_costmap/width" value="19" />
		<param name="global_costmap/update_frequency" value="2.0"/>
		<param name="global_costmap/publish_frequency" value="2.0"/>

		<param name="local_costmap/origin_x" value="-10" />
		<param name="local_costmap/origin_y" value="-10" />
		<param name="local_costmap/height" value="19" />
		<param name="local_costmap/width" value="19" />
		<param name="local_costmap/update_frequency" value="2.0"/>
		<param name="local_costmap/publish_frequency" value="2.0"/> -->
	</node>
</launch>
